# File Connector Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application environment (development, staging, production)
CONNECTOR_ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR)
CONNECTOR_LOG_LEVEL=INFO

# Maximum concurrent sync operations
CONNECTOR_MAX_CONCURRENT_SYNCS=10

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL database URL for production
# Format: postgresql://username:password@host:port/database
CONNECTOR_DATABASE_URL=postgresql://connector:connector123@localhost:5432/connector_db

# SQLite database URL for development (comment out for PostgreSQL)
# CONNECTOR_DATABASE_URL=sqlite:///./data/connector.db

# Database password (used in Docker Compose)
DB_PASSWORD=connector123

# ===========================================
# GOOGLE DRIVE API CONFIGURATION
# ===========================================

# Path to Google Drive service account credentials JSON file
CONNECTOR_GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials/google-service-account.json

# ===========================================
# AUTODESK CONSTRUCTION CLOUD API CONFIGURATION
# ===========================================

# Autodesk client credentials (OAuth 2.0)
CONNECTOR_AUTODESK_CLIENT_ID=your_autodesk_client_id
CONNECTOR_AUTODESK_CLIENT_SECRET=your_autodesk_client_secret

# Autodesk API base URL (usually doesn't need to change)
CONNECTOR_AUTODESK_BASE_URL=https://developer.api.autodesk.com

# Autodesk callback URL for OAuth (if needed)
CONNECTOR_AUTODESK_CALLBACK_URL=http://localhost:8080/auth/autodesk/callback

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

# Supabase project URL
CONNECTOR_SUPABASE_URL=your_supabase_url

# Supabase service role key (for server-side operations)
CONNECTOR_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# REDIS CONFIGURATION (OPTIONAL)
# ===========================================

# Redis URL for caching and job queuing
CONNECTOR_REDIS_URL=redis://localhost:6379

# Redis password (used in Docker Compose)
REDIS_PASSWORD=redis123

# ===========================================
# MONITORING CONFIGURATION (OPTIONAL)
# ===========================================

# Grafana admin password
GRAFANA_PASSWORD=admin123

# Prometheus metrics retention
PROMETHEUS_RETENTION=30d

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Connection pool settings
CONNECTOR_MAX_CONNECTIONS=100
CONNECTOR_MAX_CONNECTIONS_PER_HOST=30
CONNECTOR_CONNECTION_TIMEOUT=30

# Rate limiting settings
CONNECTOR_RATE_LIMIT_CALLS=100
CONNECTOR_RATE_LIMIT_WINDOW=60

# Batch processing settings
CONNECTOR_BATCH_SIZE=50
CONNECTOR_MAX_CONCURRENT_BATCHES=10

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# API rate limiting
CONNECTOR_API_RATE_LIMIT=1000
CONNECTOR_API_RATE_WINDOW=3600

# Health check configuration
CONNECTOR_HEALTH_CHECK_INTERVAL=30
CONNECTOR_HEALTH_CHECK_TIMEOUT=10

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Enable development mode (auto-reload, debug features)
CONNECTOR_DEV_MODE=false

# Debug port for remote debugging
CONNECTOR_DEBUG_PORT=5678

# Test database URL (for running tests)
CONNECTOR_TEST_DATABASE_URL=sqlite:///:memory:

# ===========================================
# CLOUD DEPLOYMENT CONFIGURATION
# ===========================================

# Docker registry for image builds
DOCKER_REGISTRY=localhost:5000

# Docker image tag
DOCKER_TAG=latest

# Kubernetes namespace
K8S_NAMESPACE=file-connector

# Domain for ingress (production)
CONNECTOR_DOMAIN=file-connector.yourdomain.com

# ===========================================
# API ENDPOINT CONFIGURATION
# ===========================================

# Default sync interval (minutes)
CONNECTOR_DEFAULT_SYNC_INTERVAL=5

# Maximum file size to process (bytes)
CONNECTOR_MAX_FILE_SIZE=104857600

# File types to include (comma-separated)
CONNECTOR_INCLUDED_FILE_TYPES=pdf,dwg,rvt,doc,docx,xls,xlsx,ppt,pptx

# Folders to exclude (comma-separated)
CONNECTOR_EXCLUDED_FOLDERS=trash,temp,cache