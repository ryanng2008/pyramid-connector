# Database Configuration
DATABASE_URL=sqlite:///./data/connector.db

# Google Drive API
GOOGLE_CREDENTIALS_PATH=./secrets/google_service_account.json
GOOGLE_APPLICATION_NAME=File Connector

# Autodesk Construction Cloud API
AUTODESK_CLIENT_ID=your_client_id_here
AUTODESK_CLIENT_SECRET=your_client_secret_here
AUTODESK_CALLBACK_URL=http://localhost:8080/callback

# Supabase (Mock)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Scheduling
SYNC_INTERVAL_MINUTES=5
MAX_CONCURRENT_SYNCS=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application
APP_NAME=File Connector
APP_VERSION=1.0.0
ENVIRONMENT=development